<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hlandim.marvelheroes.viewmodel.HeroViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".view.details.HeroActivity"
        tools:showIn="@layout/activity_hero">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvResourceUriLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/hero_resource_uri" />

            <TextView
                android:id="@+id/tvResourceUri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvResourceUriLabel"
                android:text="@{viewModel.hero.resourceURI}" />


            <RelativeLayout
                android:id="@+id/listComicsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvResourceUri"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/listComicsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/comics"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listComics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listComicsLabel"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:participation="@{viewModel.hero.comics.items}" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/listComicsLayout"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/listSeriesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listComicsLayout"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/listSeriesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/series"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listSeriesLabel"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    app:participation="@{viewModel.hero.series.items}" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/listSeriesLayout"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/listStoriesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listSeriesLayout"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/listStoriesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stories"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listSeries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listStoriesLabel"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    app:participation="@{viewModel.hero.stories.items}" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/listStoriesLayout"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/listEventsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listStoriesLayout"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/listEventsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ListView

                    android:id="@+id/listEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listEventsLabel"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    app:participation="@{viewModel.hero.events.items}" />
            </RelativeLayout>


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>
</layout>